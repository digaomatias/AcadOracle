@model IEnumerable<AcadOracle.DomainModel.Models.Turma>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Numero
        </th>
        <th>
            Disciplina
        </th>
        <th>
            TurmaHorarios
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Numero
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Disciplina).ToString()
        </td>
        <td>
			@(item.TurmaHorarios == null ? "None" : item.TurmaHorarios.Count.ToString())
        </td>
    </tr>
}

</table>


