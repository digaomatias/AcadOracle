@model AcadOracle.DomainModel.Models.Curso

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Curso</legend>

    <div class="display-label">Nome</div>
    <div class="display-field">@Model.Nome</div>

