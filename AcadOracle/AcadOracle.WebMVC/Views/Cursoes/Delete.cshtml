@model AcadOracle.DomainModel.Models.Curso

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar o curso?</h3>
<fieldset>
    <legend>Curso</legend>

    <div class="display-label">Nome</div>
    <div class="display-field">@Model.Nome</div>

    <div class="display-label">Disciplinas</div>
    <div class="display-field">@(Model.Disciplinas == null ? "None" : Model.Disciplinas.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Voltar para a lista", "Index")
    </p>
}


